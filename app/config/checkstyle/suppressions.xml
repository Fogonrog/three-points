        query="//*[MODIFIERS//*[@text = 'Getter']]/descendant-or-self::node()"/>

    <suppress-xpath checks="HideUtilityClassConstructor"
        query="//*[MODIFIERS//*[@text = 'UtilityClass']]/descendant-or-self::node()"/>

    <!-- Jakarta EE Annotations -->
    <suppress-xpath checks="DesignForExtension"
        query="//*[MODIFIERS//*[@text = 'Path']]/descendant-or-self::node()"/>

    <suppress-xpath checks="DesignForExtension"
        query="//*[MODIFIERS//*[@text = 'ApplicationScoped']]/descendant-or-self::node()"/>

    <suppress-xpath checks="DesignForExtension"
        query="//*[MODIFIERS//*[@text = 'Provider']]/descendant-or-self::node()"/>

    <suppress-xpath checks="MagicNumber"
        query="//*[MODIFIERS//*[@text = 'Size']]/descendant-or-self::node()"/>
